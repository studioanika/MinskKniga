<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_zayavki_booki.fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Математика 1класс самостоятельная и контрольная работа"
        android:textColor="@color/text_blue"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7">

            <TextView
                android:id="@+id/item_zayavki_booki.class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:text="Класс"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/item_zayavki_booki.izdatel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Изд."
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/item_zayavki_booki.articul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.3"
                android:text="Арт."
                android:textColor="@android:color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_zayavki_booki.sokr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.6"
            android:text="Сокр."
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/item_zayavki_booki.zayavka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.9"
            android:ems="10"

            android:inputType="number"
            android:text="40"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>